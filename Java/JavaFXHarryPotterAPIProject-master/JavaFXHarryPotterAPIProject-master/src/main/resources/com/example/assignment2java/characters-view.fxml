<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:id="root" fx:controller="com.example.assignment2java.HelloController" alignment="CENTER" spacing="10">
    <HBox alignment="TOP_LEFT" spacing="10">
        <Button fx:id="backButton" text="Back to Start" onAction="#handleBackButtonClick"/>
    </HBox>
    <Label fx:id="titleLabel" text="Harry Potter Character Book" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <VBox alignment="CENTER" spacing="10">
        <Label fx:id="characterIdLabel" text="ID:" />
        <Label fx:id="characterNameLabel" text="Name:" />
        <Label fx:id="characterSpeciesLabel" text="Species:" />
        <Label fx:id="characterGenderLabel" text="Gender:" />
        <Label fx:id="characterHouseLabel" text="House:" />
        <Label fx:id="characterActorLabel" text="Actor:" />
        <ImageView fx:id="characterImageView" fitWidth="200" fitHeight="400" preserveRatio="true" />
    </VBox>
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="previousButton" text="Previous" onAction="#onPreviousButtonClick" />
        <Button fx:id="nextButton" text="Next" onAction="#onNextButtonClick" />
    </HBox>
</VBox>
